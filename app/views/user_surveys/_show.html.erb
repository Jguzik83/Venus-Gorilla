
  <div><%= form_tag survey_choices_path, :id => 'form-partial', method: 'post' do %>
  <div><%= @question.q_name %></div>
    <% @question.choices.each do |choice| %>
    <%= radio_button_tag "survey_choice[choice_id]", choice.id %>
    <%= label_tag :c_name, choice.c_name %><br>
    <% end %>
    <%= hidden_field_tag "survey_choice[question_id]", @question.id %>
    <%= hidden_field_tag "survey_choice[user_survey_id]", @user_survey.id %>
  <%= submit_tag "Submit" %>
<% end %>
</div>

